<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindFriends">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"

            android:background="@drawable/gradient"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/find_events"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_manage_search_24" />
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <RadioButton android:id="@+id/chooseOrganizer"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/gradient"
                android:layout_height="match_parent"
                android:text="@string/organizer"
                android:textSize="21sp"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:onClick="showOrganizer"/>
            <RadioButton android:id="@+id/chooseEventName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient"
                android:text="@string/event_name"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                android:textStyle="bold"
                android:onClick="showName"/>
            <RadioButton android:id="@+id/chooseEventType"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradient"
                android:text="@string/event_type"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:drawableStart="@drawable/ic_baseline_interests_24"
                android:textStyle="bold"
                android:onClick="showType"/>
        </RadioGroup>
        <androidx.cardview.widget.CardView
            android:id="@+id/organizerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
            android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gradient"
            android:text="@string/organizer"
            android:gravity="center"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editTextOrganizerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.9"
                android:ems="10"
                android:hint="@string/enter_organizer_name"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <ImageView
                android:id="@+id/imageViewBeginSearchOrganizerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:srcCompat="@drawable/ic_baseline_search_24" />
        </LinearLayout></LinearLayout></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/nameCard"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/gradient"
                    android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                    android:gravity="center"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="5dp"
                    android:text="@string/event_name"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/editTextEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.9"
                        android:ems="10"
                        android:hint="@string/enter_event_name"
                        android:inputType="textPersonName"
                        android:minHeight="48dp" />

                    <ImageView
                        android:id="@+id/imageViewBeginSearchEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:srcCompat="@drawable/ic_baseline_search_24" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/typeCard"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/gradient"
                    android:drawableStart="@drawable/ic_baseline_interests_24"
                    android:gravity="center"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="5dp"
                    android:text="@string/event_type"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewEventType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/gradient"
                        android:contentDescription="@string/event_type"
                        android:gravity="center"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_interests_24"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/choose_an_activity_category"
                        android:minHeight="48dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/gradient"
            android:drawableStart="@drawable/ic_baseline_filter_alt_24"
            android:gravity="center"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="5dp"
            android:text="@string/results"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</ScrollView>