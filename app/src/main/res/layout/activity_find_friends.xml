<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindFriends">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/gradient"
                android:minWidth="48dp"
                app:srcCompat="@drawable/ic_baseline_filter_alt_24" />

            <Spinner
                android:id="@+id/search_params"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"  />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/gradient"
                android:minWidth="48dp"
                app:srcCompat="@drawable/ic_baseline_sort_24" />

            <Spinner
                android:id="@+id/sort_params"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextSearchValue"
                android:layout_weight="0.9"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/enter_search_value" />

            <ImageView
                android:id="@+id/imageViewBeginSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/gradient"
                android:minWidth="48dp"
                app:srcCompat="@drawable/ic_baseline_search_24" />
        </LinearLayout>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/find_friends"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                android:background="@drawable/gradient"
                app:drawableStartCompat="@drawable/ic_baseline_person_search_24" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerViewFriends"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</ScrollView>