<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!--tools:openDrawer="start"-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ViewEventActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                android:gravity="center"
                android:hint="@string/event_name"
                android:fontFamily="sans-serif-condensed-light"
                android:minHeight="48dp"
                android:padding="5dp"
                android:drawableTint="@color/teal_700"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEventType"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                
                android:drawableStart="@drawable/ic_baseline_interests_24"
                android:gravity="center"
                android:hint="@string/event_type"
                android:minHeight="48dp"
                android:padding="5dp"
                android:drawableTint="@color/teal_700"
                android:textSize="21sp"
                android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/dark_teal_700"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:src="@drawable/ic_baseline_profile_picture_24"/>


                    <TextView
                        android:id="@+id/textViewOrganizer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:fontFamily="sans-serif-condensed-light"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/username"
                        android:textSize="21sp"
                        android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textViewPublic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-light"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/ic_baseline_lock_open_24"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/public_event"
                        android:drawableTint="@color/teal_700"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewOutdoor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:drawableStart="@drawable/ic_baseline_nature_people_24"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/outdoor"
                        android:drawableTint="@color/teal_700"
                        android:textSize="21sp"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-condensed-light"
                        android:drawableStart="@drawable/ic_baseline_description_24"
                        android:gravity="center"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:padding="5dp"
                        android:text="@string/event_description"
                        android:drawableTint="@color/teal_700"
                        android:textSize="21sp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewEvenDescription"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:gravity="center"
                        android:hint="@string/event_description"
                        android:inputType="textMultiLine"
                        android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/ic_baseline_workspace_premium_24"
                android:drawableTint="@color/teal_700"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text="@string/minimum_level"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewMinimumLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:hint="@string/minimum_level"
                android:inputType="number"
                android:minHeight="48dp"
                android:textSize="21dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableStart="@drawable/ic_baseline_groups_24"
                android:drawableTint="@color/teal_700"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text="@string/number_of_players"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNumberOfPlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:hint="@string/number_of_players"
                android:minHeight="48dp"
                android:textSize="21dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/choose_date"
                android:drawableStart="@drawable/ic_baseline_hourglass_top_24"
                android:drawableTint="@color/teal_700"
                android:focusable="true"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/event_start"
                android:textSize="21sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewChooseStartDate"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/teal_drawable"
                    android:clickable="true"
                    android:contentDescription="@string/choose_start_date"
                    android:focusable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_baseline_event_24" />

                <TextView
                    android:id="@+id/textViewChooseStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="center"
                    android:hint="@string/choose_start_date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewChooseStartTime"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/teal_drawable"
                    android:clickable="true"
                    android:contentDescription="@string/choose_start_time"
                    android:focusable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_baseline_access_time_24" />

                <TextView
                    android:id="@+id/textViewChooseStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="center"
                    android:hint="@string/choose_start_time" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/choose_date"
                android:drawableStart="@drawable/ic_baseline_hourglass_bottom_24"
                android:drawableTint="@color/teal_700"
                android:focusable="true"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/event_end"
                android:textSize="21sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewChooseEndDate"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/teal_drawable"
                    android:clickable="true"
                    android:contentDescription="@string/choose_end_date"
                    android:focusable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_baseline_event_24" />

                <TextView
                    android:id="@+id/textViewChooseEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="center"
                    android:hint="@string/choose_end_date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewChooseEndTime"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/teal_drawable"
                    android:clickable="true"
                    android:contentDescription="@string/choose_end_time"
                    android:focusable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_baseline_access_time_24" />

                <TextView
                    android:id="@+id/textViewChooseEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="center"
                    android:hint="@string/choose_end_time" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/location"
                android:drawableStart="@drawable/ic_baseline_location_searching_24"
                android:drawableTint="@color/teal_700"
                android:focusable="true"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/location"
                android:textSize="21sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewChooseLocation"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/teal_drawable"
                    android:clickable="true"
                    android:contentDescription="@string/choose_location"
                    android:focusable="true"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/ic_baseline_location_on_24" />

                <TextView
                    android:id="@+id/textViewChooseLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/choose_location" />

            </LinearLayout>

            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

            </org.osmdroid.views.MapView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                     android:checked="true"
                    android:drawableStart="@drawable/ic_baseline_notifications_24"
                    android:drawableTint="@color/teal_700"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/notifications"
                    android:textSize="21dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewApply"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/teal_drawable"
                    android:clickable="true"
                    android:contentDescription="@string/apply"
                    android:drawableTint="@color/teal_700"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_person_add_24"
                    android:textAllCaps="true"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/imageViewRate"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/teal_drawable"
                    android:clickable="true"
                    android:contentDescription="@string/apply"
                    android:focusable="true"
                    android:padding="10dp"
                    android:gravity="center"
                    android:src="@drawable/ic_baseline_star_outline_24" />

                <ImageView
                    android:id="@+id/imageViewEdit"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/teal_drawable"
                    android:clickable="true"
                    android:contentDescription="@string/create_event"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_edit_calendar_24" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/teal_drawable"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/activity_main_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>

