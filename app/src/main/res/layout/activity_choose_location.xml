<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ChooseLocation">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gradient"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:gravity="center|center_horizontal|center_vertical"
                android:padding="5dp"
                android:text="@string/choose_location"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/marker_latitude"></TextView>

                    <EditText
                        android:id="@+id/inputLatitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="@string/enter_latitude"
                        android:inputType="numberDecimal"
                        android:importantForAutofill="no"
                        android:minHeight="48dp"
                        android:textColorHint="#BCAAA4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/marker_longitude"></TextView>

                    <EditText
                        android:id="@+id/inputLongitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_longitude"
                        android:inputType="numberDecimal"
                        android:minHeight="48dp"
                        android:textColorHint="#BCAAA4"
                        android:importantForAutofill="no"></EditText>
                </LinearLayout>

                <ImageView
                    android:id="@+id/updateLocation"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/gradient"
                    android:clickable="true"
                    android:contentDescription="@string/choose_location"
                    android:focusable="true"
                    android:src="@drawable/ic_baseline_location_on_24">

                </ImageView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">


            <TextView
                android:id="@+id/coordinates"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:hint="@string/my_location"
                android:textColor="@color/white"
                android:background="@drawable/gradient"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/marker"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal|center_vertical"
                android:hint="@string/choose_location"
                android:textColor="@color/white"
                android:background="@drawable/gradient"
                android:textStyle="bold" />


        <ImageView
            android:id="@+id/confirm_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:background="@drawable/gradient"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/confirm_location"
            app:srcCompat="@drawable/ic_baseline_check_24" />

    </LinearLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </org.osmdroid.views.MapView>

</android.widget.LinearLayout>