<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/purple_200"
                    android:endColor="@color/purple_500"
                    android:centerColor="@color/purple_700"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <shape>
            <gradient
                android:startColor="@color/blue_gray_500"
                android:endColor="@color/blue_gray_100"
                android:centerColor="@color/blue_gray_300"
                />
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"
                android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/my_yellow"
                    android:endColor="@color/purple_dark"
                    android:centerColor="@color/my_pink"
                    />
                <corners android:topLeftRadius="10dp" android:topRightRadius="0dp"
                    android:bottomLeftRadius="10dp" android:bottomRightRadius="0dp"/>
            </shape>
        </clip>
    </item>
</layer-list>